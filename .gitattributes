# Set default behavior to automatically normalize line endings
* text=auto

# Python files
*.py text diff=python
*.pyw text diff=python

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Config files
*.ini text
*.cfg text
*.conf text
*.json text
*.yaml text
*.yml text
*.toml text
.env.example text

# Documentation files
*.md text
LICENSE text
*.txt text

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Database files (binary)
*.db binary
*.sqlite binary
*.sqlite3 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore 