# Environment
ENV=development

# Application
APP_NAME=valuer-db-processor
APP_VERSION=1.0.0
DEBUG=false

# Storage
USE_GCS=false
GCS_BUCKET_NAME=valuer-auction-images
LOCAL_STORAGE_PATH=./local_images

# Database
DB_TYPE=sqlite
DATABASE_URL=sqlite+aiosqlite:///./local_data/valuer.db
SQL_ECHO=false

# Image Processing
BASE_IMAGE_URL=https://image.invaluable.com/housePhotos/
OPTIMIZE_IMAGES=true
MAX_IMAGE_DIMENSION=1200
IMAGE_PROCESSING_BATCH_SIZE=50
MAX_WORKERS=10

# Logging
LOG_LEVEL=INFO

# Cloud SQL Connection (for production)
INSTANCE_CONNECTION_NAME=civil-forge-403609:us-central1:valuer-db
PROJECT_ID=civil-forge-403609